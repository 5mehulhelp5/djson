{
    "name": "qoliber/djson",
    "description": "Dynamic JSON templating library with loops, conditions, and variables",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Winkler",
            "email": "jwinkler@qoliber.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "infection/infection": "*"
    },
    "autoload": {
        "psr-4": {
            "Qoliber\\DJson\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qoliber\\DJson\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
